<launch>
    <let name="urdf_path" 
         value="$(find-pkg-share pickup_bot)/description/pickup_bot.urdf.xacro" />
    <let name="rviz_config_path"
         value="$(find-pkg-share pickup_bot)/config/drive_bot.rviz" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <include file="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py">
     <arg name="world" value="$(find-pkg-share pickup_bot)/worlds/second_world.world" />
    </include>

    <node pkg="gazebo_ros" exec="spawn_entity.py"
          args="-topic robot_description -entity pickup_bot" />

    <node pkg="rviz2" exec="rviz2" output="screen" 
          args="-d $(var rviz_config_path)" />
</launch>
